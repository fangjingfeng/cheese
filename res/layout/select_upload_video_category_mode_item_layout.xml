<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/file_list_item_height">

    <ImageView
        android:layout_width="@dimen/file_list_item_height"
        android:layout_height="@dimen/file_list_item_height"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"
        android:id="@+id/bucketVideoView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Camera"
        android:id="@+id/bucketNameView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/bucketVideoView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="一个"
        android:drawableRight="@drawable/select_upload_image_item_arrow_img"
        android:id="@+id/countTextView"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" />

</RelativeLayout>